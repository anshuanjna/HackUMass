{
  "manifest_version": 3,
  "name": "TabSense",
  "version": "1.0",
  "description": "Organize your browser tabs by meaning and mood. Uses AI to group tabs and track time spent by topic.",
  "permissions": ["tabs", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "TabSense"
  },
  "authors": "Rakshita Saroha, Pihul Nyati, Anshu Anjna, Prisha Babel"
}
